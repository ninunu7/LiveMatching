<h1>マイページ</h1>
<table>
  <tbody>
    <tr>
      <td><%= image_tag current_customer.profile_image.to_s, :size =>'80x80' %></td>
    </tr>
    <tr>
      <td>名前</td>
      <td><%= current_customer.name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= current_customer.email %></td>
    </tr>
    <tr>
      <td>生年月日</td>
      <td><%= current_customer.birth_date %></td>
    </tr>
    <tr>
      <td>性別</td>
      <td><%= current_customer.gender %></td>
    </tr>
    <tr>
      <td>自己紹介</td>
      <td><%= current_customer.introduction %></td>
    </tr>
  </tbody>
</table>
<%= link_to "ブログ",blogs_path %>
<%= link_to "参加するイベント",events_path %>
<%= link_to "編集する",edit_customer_registration_path %>
<%= link_to "退会する",customers_quit_path(current_customer.id) %>