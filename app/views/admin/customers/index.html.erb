<div class="admin-layout">
<h1 class="admin-customer-top">会員一覧</h1>
<div class="admin-customer-count">全<%= @customers.total_count %>人(<%= @customers.count %>人表示)</div>
  <table class="table table-hover text-center admin-customer-table">
    <thead>
      <tr>
        <th style="width: 15%">ID</th>
        <th style="width: 35%">名前</th>
        <th style="width: 35%">メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.id %>
          </td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="admin-paginate"><%= paginate @customers %></div>
</div>
