<h1 class="mt-5">検索画面</h1>
  <%= form_with(scope: :search, url: search_events_path, method: :get, local: true) do |f| %>
  <div>
    <%= f.label :join_day, "参加日" %>
    <%= f.date_field :join_day_from, value: @search_params[:join_day_from] %> ~
    <%= f.date_field :join_day_to, value: @search_params[:join_day_to] %>
  </div>
  <div>
    <%= f.label :artist_name, "アーティスト名" %>
    <%= f.text_field :artist_name, placeholder: 'アーティスト名', value: @search_params[:artist_name] %>
    </div>
  <div>
    <%= f.label :message, "メッセージ" %>
    <%= f.text_area :message, value: @search_params[:message] %>
  </div>

    <%= submit_tag '検索', class: "button" %>
  <% end %>

<h1 class="mt-5">検索結果</h1>
  <table class="table table-hover tablee-bordered">
    <thead>
      <tr class="info">
        <th style="background:#FAEBD7;"></th>
        <th style="background:#FAEBD7;">ユーザー</th>
        <th style="background:#FAEBD7;">性別</th>
        <th style="background:#FAEBD7;">参加日</th>
        <th style="background:#FAEBD7;" style="width: 15%">アーティスト名</th>
        <th style="background:#FAEBD7;" style="width: 35%">メッセージ</th>
        <th style="background:#FAEBD7;"></th>
      </tr>
    </thead>
    <tbody>
    <% unless @search_params.blank? %>
    (全<%= @events.count %>件)
      <% @events.each do |event| %>
        <tr>
          <td><%= image_tag event.customer.profile_image.to_s, :size =>'50x50' %></td>
          <td><%= link_to(event.customer.name, customer_path(event.customer_id)) %></td>
          <td><%= event.customer.gender_i18n %></td>
          <td><%= event.join_day %></td>
          <td><%= event.artist_name %></td>
          <td><%= event.message.truncate(15) %></td>
          <td><%= link_to"詳細を見る", event_path(event) %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>