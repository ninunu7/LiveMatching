<div id="search-main">
  <div class="condition">
    <h1 class="search-top">検索画面</h1>
    <%= form_with(scope: :search, url: search_events_path, method: :get, local: true) do |f| %>
      <div>
        <div class="search-list"><%= f.label :start_time, "参加日" %></div>
        <%= f.date_field :start_time_from, value: @search_params[:start_time_from], class: "start-time-form" %> ~
        <%= f.date_field :start_time_to, value: @search_params[:start_time_to], class: "start-time-form" %>
      </div>
      <div>
        <div class="search-list"><%= f.label :artist_name, "アーティスト名" %></div>
        <%= f.text_field :artist_name, placeholder: 'アーティスト名', value: @search_params[:artist_name], class: "artistname-form" %>
      </div>
      <div>
        <div class="search-list"><%= f.label :message, "メッセージ" %></div>
        <%= f.text_area :message, value: @search_params[:message], class: "message-form" %>
      </div>
    <div class="search">
      <%= submit_tag '検索する', class: "btn btn-info search-button" %>
    </div>
  <% end %>
</div>
<div class="result">
  <table class="table result-table">
    <thead class="result-th">
      <tr>
        <th style="background:#FAEBD7;">ユーザー</th>
        <th style="background:#FAEBD7;" >性別</th>
        <th style="background:#FAEBD7;">参加日</th>
        <th style="background:#FAEBD7;" style="width: 15%">アーティスト名</th>
        <th style="background:#FAEBD7;" style="width: 35%">メッセージ</th>
        <th style="background:#FAEBD7;"></th>
      </tr>
    </thead>
    <tbody>
    <% unless @search_params.blank? %>
    (全<%= @events.count %>件)
      <% @events.each do |event| %>
        <tr class="result-tr">
          <td class="result-td">
            <%= image_tag event.customer.profile_image.to_s, :size =>'50x50' %>
            <%= link_to(event.customer.name, customer_path(event.customer_id)) %>
          </td>
          <td class="result-td"><%= event.customer.gender_i18n %></td>
          <td class="result-td">
            <%= l event.start_time, format: :short %>
          </td>
          <td class="result-td"><%= event.artist_name %></td>
          <td class="result-td"><%= event.message.truncate(15) %></td>
          <td class="result-td"><%= link_to"詳細を見る", event_path(event),class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
  </div>
</div>