<div class="container">
<div class="error">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
  <div class="row">
    <h3 class="my-5 px-4 rounded-circle", style="background:#EEEEEE;">マイページ編集</h3>
  </div>
  <div class="row">
  <!--<div class="col-lg-2">-->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <!--    <%= render "devise/shared/error_messages", resource: resource %>-->
  <!--    <span><%= image_tag current_customer.profile_image.to_s, :size =>'80x80' %></span>-->
  <!--</div>-->
      <% if current_customer.persisted? && current_customer.profile_image? %>
        <%= image_tag current_customer.profile_image.to_s, :size =>'80x80' %>
      <% else %>
        <%= image_tag 'default.png', :size =>'80x80' %>
        <%= f.hidden_field :profile_image_cache %>
      <% end %>
        <%= f.file_field :profile_image %>
      <table class="table table-bordered table-condensed">
        <tbody>
          <tr>
            <td style="width: 25%"><%= f.label :'名前' %></td>
            <td style="width: 25%"><%= f.text_field :name, autofocus: true, :size=>"40" %></td>
          </tr>
          <tr>
            <td><%= f.label :'メールアドレス' %></td>
            <td><%= f.email_field :email, :size=>"40" %></td>
          </tr>
          <tr>
            <td><%= f.label :'生年月日' %></td>
            <td><%= f.date_select(
                :birth_date,
                start_year: 1930,
                end_year: (Time.now.year - 18),
                default: Date.new(1989, 1, 1)) %></td>
          </tr>
          <tr>
            <td><%= f.label :'性別'%></td>
            <td><%= f.radio_button :gender, :man %>
              <%= f.label :'男性' %>
              <%= f.radio_button :gender, :woman %>
              <%= f.label :'女性' %></td>
          </tr>
          <!--<tr>-->
          <!--  <td>-->
          <!--  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>-->
          <!--    Currently waiting confirmation for: <%= resource.unconfirmed_email %>-->
          <!--  <% end %>-->
          <!--  </td>-->
          <!--</tr>-->
          <tr>
            <td rowspan="3">
              <%= f.label :'パスワード' %>
            </td>
            <td>
              <%= f.password_field :current_password, placeholder: "現在のパスワード", :size=>"40" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.password_field :password, placeholder: "新しいパスワード(6文字以上)", :size=>"40" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.password_field :password_confirmation, placeholder: "新しいパスワード(確認)", :size=>"40" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :'自己紹介' %></td>
            <td>
              <%= f.text_area :introduction, :size =>'70x10' %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="actions">
        <%= f.submit "編集" %>
      </div>
    <% end %>

    <%= link_to "戻る", :back %>
  </div>
  </div>

