<div class="profile">
  <div class="top-title">
    <span class="top-title"><%= @customer.name %>のプロフィール</span>
  </div>
    <div class="profile-top">
      <div><%= image_tag @customer.profile_image.to_s, :size =>'120x120', class: "profile-image" %></div>

      <div id="follow">
        <%= render partial: 'customer/relationships/follow_button', locals: { customer: @customer } %>
      </div>
      <div class="blog-event">
        <div class="blog-event-button">
          <%= link_to "ブログ",blogs_path(customer_id: @customer.id), class: "btn btn-orange btn-shadow" %>
        </div>
        <div class="blog-event-button">
          <%= link_to "イベント",events_path(customer_id: @customer.id), class: "btn btn-orange btn-shadow" %>
        </div>
      </div>
    </div>
      <table class="table table-bordered table-condensed">
        <tbody>
          <tr>
            <td style="width: 25%">名前</td>
            <td style="width: 45%"><%= @customer.name %></td>
          </tr>
          <tr>
            <td>生年月日</td>
            <td><%= @customer.birth_date %>

            </td>
          </tr>
          <tr>
            <td>性別</td>
            <td><%= @customer.gender_i18n %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= @customer.introduction %></td>
          </tr>
        </tbody>
      </table>

    <div class="profile-bottom">
      <% if customer_signed_in? && @customer.id == current_customer.id %>
        <%= link_to "編集する",edit_customer_registration_path, class: "btn btn-orange btn-shadow" %>
        <%= link_to "退会する",quit_customer_path, class: "btn btn-sm btn-secondary" %>
      <% end %>
    </div>

</div>