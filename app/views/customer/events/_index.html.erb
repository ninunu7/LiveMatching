<div>コメント数:<%= @event.comments.count %></div>
<% @event.comments.reverse.each do |comment| %>
  <div class="comments">
    <div class="display">
      <div class="image">
        <%= image_tag comment.customer.profile_image.to_s, :size =>'35x35' %>
      </div>
      <div class="customer-name">
        <%= link_to(comment.customer.name, customer_path(comment.customer_id)) %>
      </div>
    </div>
    <div class="comment-time">
      <%= comment.created_at.strftime('%Y/%m/%-d(%a) %-H:%M') %>
    </div>
    <div class="comment">
      <%= comment.comment %>
    </div>
    <% if comment.customer == current_customer %>
      <%= link_to "コメントを削除", event_comment_path(comment.event, comment), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: '本当にコメントを削除しますか？'} %>
    <% end %>
  </div>
<% end %>
