<div class="container">
  <div class="row">
    <h3 class="my-5 px-4 rounded-circle", style="background:#EEEEEE;">今後の予定</h3>
  </div>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= link_to event.artist_name, event %>
    </div>
  <% end %>
<% end %>



  <div>登録数:<%= @events.count %></div>
  <div class="row">
    <table>
      <table class="table table-hover table-bordered">
      <thead>
        <tr class="info">
          <th style="background:#FAEBD7;">参加日</th>
          <th style="background:#FAEBD7;" style="width: 15%">アーティスト名</th>
          <th style="background:#FAEBD7;" style="width: 25%">メッセージ</th>
          <th style="background:#FAEBD7;" style="width: 15%"></th>
          <th style="background:#FAEBD7;" style="width: 15%"></th>
          <th style="background:#FAEBD7;"></th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.start_time.strftime('%Y/%m/%-d(%a)') %></td>
            <td><%= event.artist_name %></td>
            <td><%= event.message.truncate(15) %></td>
            <td><%= "#{event.comments.count}コメント" %></td>
            <td><%= link_to "詳細を見る",event_path(event), class: "btn btn-sm btn-info" %></td>
            <td>
              <div class="event-destroy">
              <%= link_to '削除する', event_path(event), method: :delete, class: "btn btn-sm btn-danger destroy_blog_#{event.id}", data: {confirm: '本当にイベントを削除しますか？'} %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= link_to "参加するイベントを登録する",new_event_path, class: "btn btn-success" %>
  </div>
</div>
