<h2><%= @customer.name %>さんの会員情報編集</h2>
<%= form_with model:@customer, url:admin_customer_path, local:true ,method: :patch  do |f| %>

  <div class="field">
    <%= f.label :'ユーザー名' %><br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :'メールアドレス' %><br>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :'性別'%><br>
    <%= f.radio_button :gender, :man %>
    <%= f.label :'男性' %>
    <%= f.radio_button :gender, :woman %>
    <%= f.label :'女性' %>
  </div>

  <div class="field">
    <%= f.label :'自己紹介' %><br>
    <%= f.text_area :introduction, :size =>'80x15' %>
  </div>

  <div class="actions">
    <%= f.submit "編集" %>
  </div>
<% end %>
<%= link_to "戻る", :back %>
