<body class="show">
  <div class="blog-body">
    <h1>ブログ詳細</h1>
      <div class="blogfield">投稿日</div>
      <div class="blogform"><%= @blog.created_at %></div>

      <div class="blogfield">タイトル</div>
      <div class="blogform"><%= @blog.blog_title %></div>

      <div class="blogfield">投稿内容</div>
      <div class="blogform"><%= @blog.blog_text %></div>

      <div class="link">
        <%= link_to 'ブログを削除する', blog_path(@blog), method: :delete, class: "btn btn-sm btn-danger destroy_blog_#{@blog.id}"%>
        <%= link_to 'ブログ一覧に戻る', blogs_path(@blog), class: "btn btn-sm btn-success" %>
      </div>
  </div>

  <div class="sidebar">
    <h2>コメント一覧</h2>
    <div class="error">
      <% if @blog_comment.errors.any? %>
        <% @blog_comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </div>
    <span>コメント数:<%= @blog.blog_comments.count %></span>
    <div class="new-comment">
      <%= form_with(model:[@blog,@blog_comment], local: true) do |f| %>
      <%= f.text_area :comment, rows:'5',placeholder: "コメントを入力" %>
      <%= f.submit "送信する", class: "btn btn-sm btn-primary" %>
      <% end %>
    </div>
    <div class="comments">
      <% @blog.blog_comments.each do |blog_comment| %>
      <%= blog_comment.created_at.strftime('%Y/%m/%d') %>
      <%= image_tag blog_comment.customer.profile_image.to_s, :size =>'50x50' %>
      <%= blog_comment.customer.name %>
      <%= blog_comment.comment %>
      <%= link_to "コメントを削除", blog_blog_comment_path(blog_comment.blog, blog_comment), method: :delete, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  </div>
</body>


