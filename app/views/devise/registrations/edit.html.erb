<h2>マイページ編集</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <% if current_customer.persisted? && current_customer.profile_image? %>
      <%= image_tag current_customer.profile_image.to_s, :size =>'80x80' %>
    <% else %>
      <%= image_tag 'default.png', :size =>'80x80' %>
      <%= f.hidden_field :profile_image_cache %>
    <% end %>
      <%= f.file_field :profile_image %>
  </div>


  <div class="field">
    <%= f.label :'メールアドレス' %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
  <%= f.label :birth_date %>
  <%= f.date_select(
        :birth_date,
        start_year: 1930,
        end_year: (Time.now.year - 18),
        default: Date.new(1989, 1, 1)) %>
</div>

  <div class="field">
    <%= f.label :'性別'%><br>
    <%= f.radio_button :gender, :man %>
    <%= f.label :'男性' %>
    <%= f.radio_button :gender, :woman %>
    <%= f.label :'女性' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :'現在のパスワードを入力してください' %><br>
    <i>(変更しない場合は記入不要)</i><br>
    <%= f.password_field :current_password %>
  </div>

  <div class="field">
    <%= f.label :'新しいパスワード' %><br>
    <i>(変更しない場合は記入不要)</i><br>
    <%= f.password_field :password, placeholder: "6文字以上" %>
  </div>

  <div class="field">
    <%= f.label :'パスワード確認' %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :'自己紹介' %><br />
    <%= f.text_area :introduction, :size =>'80x15' %>
  </div>

  <div class="actions">
    <%= f.submit "編集" %>
  </div>
<% end %>
<p><%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "戻る", :back %>
