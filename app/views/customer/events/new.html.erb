<div class="new-body">
    <h1 class="mt-5 new-event">参加するイベントを登録</h1>
    <div class="error">
    <% if @event.errors.any? %>
      <% @event.errors.full_messages.each do |message| %>
        <li class="list-unstyled text-danger"><%= message %></li>
      <% end %>
    <% end %>
    </div>
    <%= form_with model:@event, url:'/events', local:true do |f| %>
      <div class="mt-3">
        <%= f.label :'日付' %><br>
        <%= f.date_field :start_time, class: 'new-date-form' %>
      </div>
      <div class="mt-3">
        <%= f.label :'アーティスト名' %><br>
        <%= f.text_field :artist_name, autofocus: true, placeholder: "30字以内", class: 'new-form' %>
      </div>
      <div class="mt-3">
        <%= f.label :'メッセージ' %><br>
        <%= f.text_area :message, autofocus: true, class: 'new-message-form' %>
      </div>
      <div class="actions">
        <%= f.submit "登録", class: 'registration-button mt-4' %>
      </div>
    <% end %>
    <%= link_to "戻る", :back, class: 'btn btn-secondary mt-4'%>
</div>
